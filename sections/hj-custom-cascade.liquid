{%- assign section_color = section.settings.color_scheme -%}
{%- include 'global-variables' -%}

{%- assign font_size = 'font-size--sm md--up--font-size--m line-height--3' -%}
{%- assign font_size = global__basic_font_size -%}

<section class="hj-process page px2 max-site-width {{ global__section_with_padding_class }} lg--up--px3 md--up--pb5 mb5">
  <div class="hj-process-container mx--auto md--up--six-eighths lg--up--four-eighths">
    <h1 class="{{ hj__heading_font_size }} mb2">
      {{ section.settings.heading }}
    </h1>
    <h3 class="f--heading mb1">
      {{ section.settings.subheading }}
    </h3>
  </div>

  <div class="hj-cascade-container my4">
    {% include 'hj-cascade-flex' %}
  </div>

  <div class="hj-process-container mx--auto md--up--six-eighths lg--up--four-eighths md--up--py4">
    <!-- <div class="rte {{ global__basic_font_size }}">
      {{ section.settings.paragraph }}
    </div> -->
    <h3 class="f--heading mb1">
      {{ section.settings.paragraph }}
    </h3>
  </div>
</section>

<!-- {% include 'hj-cascade' %} -->

{% schema %}
{
  "name": "HJ Custom Process",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "id": "heading",
      "type": "text",
      "label": "Heading",
      "default": "Custom Process"
    },
    {
      "id": "subheading",
      "type": "text",
      "label": "Subheading",
      "default": "Why this is special"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "id": "paragraph",
      "type": "richtext",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
          {
            "type": "select",
            "id": "hide_image",
            "label": "Where to hide image",
            "options": [
              { "value": "none", "label": "None"},
              { "value": "mobile", "label": "Hide on Mobile"},
              { "value": "desktop ", "label": "Hide on Desktop"}
            ]
          },
          {
            "type": "select",
            "id": "step",
            "label": "Custom Step",
            "options": [
              { "value": "1", "label": "One"},
              { "value": "2", "label": "Two"},
              { "value": "3", "label": "Three"},
              { "value": "4", "label": "Four"},
              { "value": "5", "label": "Five"}
            ]
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "header",
            "content": "Size"
          },
          {
            "type": "select",
            "id": "block_width_mobile",
            "options": [
              { "value": "half", "label": "Half width"},
              { "value": "full", "label": "Full width"}
            ],
            "label": "Mobile"
          },
          {
            "type": "select",
            "id": "block_width",
            "options": [
              { "value": "half", "label": "Half width"},
              { "value": "full", "label": "Full width"}
            ],
            "label": "Desktop"
          }
      ]
    },
    {
      "type": "rich_text",
      "name": "Heading with text",
      "settings": [
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "id": "heading",
          "type": "text",
          "label": "Heading",
          "default": "STEP ONE"
        },
        {
          "id": "subheading",
          "type": "text",
          "label": "Subheading",
          "default": "Summary of this step"
        },
        {
          "type": "header",
          "content": "Text"
        },
        {
          "id": "rich_text",
          "type": "richtext",
          "label": "Text",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        },
         {
           "type": "header",
           "content": "Size"
         },
         {
           "type": "select",
           "id": "block_width_mobile",
           "options": [
             { "value": "half", "label": "Half width"},
             { "value": "full", "label": "Full width"}
           ],
           "label": "Mobile"
         },
         {
           "type": "select",
           "id": "block_width",
           "options": [
             { "value": "half", "label": "Half width"},
             { "value": "full", "label": "Full width"}
           ],
           "label": "Desktop"
         }
      ]
    }
  ]
}
{% endschema %}
